* Description  :This vf page is used to display a thank you message to the customer after clicking on Verificatioin button.
-->
<apex:page showHeader="false" standardStylesheets="false" sidebar="false" applyHtmlTag="false" applyBodyTag="false" docType="html-5.0">
    <html>
        <head>
            <!-- Import the Design System style sheet -->
            <apex:slds />
        </head>
        <div class="slds-modal__header">
            <img src="{!$Resource.TITANJEWELLOGO}" width="160px" height="120px" align="left"/>
            
        </div><br/><br/><br/><br/>
    </html><br/><br/>
    <style>
        
        
        div {
        border-radius: 5px;            
        border:0px;
        margin: 4px 5px;
        padding: 20px 20px;
        text-align: justify;
        }																																
    </style>
    <body>
        <div>
            <apex:form id="form" styleClass="slds-scope" >
                <div class="slds-align_absolute-center slds-text-heading_large "  >
                    <center >
                        <b style="color:black;font-family: 'Times New Roman'; font-size: 55px">THANK YOU!  </b>
                    </center>
                </div>            
                <div class="slds-align_absolute-center"  >
                    
                    <img src="{!$Resource.TitanThankYouLogo}" width="100px" height="100px" align="left"/>   
                </div>																															
                <div class="slds-align_absolute-center slds-text-heading_medium" >
                    <center style="color:black;font-family:nunito light; font-size: 30px" >
                        Your email address has been verified.<br/><br/><br/><br/>      
                    </center>
                </div>     
            </apex:form>
        </div>
        
    </body>
    
</apex:page>